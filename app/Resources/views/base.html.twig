<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}EPIC: user management system{% endblock %}</title>

        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('css/custom.css') }}" />

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>
        <div class="container">
            {% if app.request.attributes.get('_route') != 'fos_user_security_login' %}
                <div class="masthead">
                    <h3 class="text-muted">{{ 'project_title'|trans }}</h3>

                    <nav>
                        <ul class="nav nav-justified">
                            <li{% if app.request.attributes.get('_route') starts with 'person' %} class="active"{% endif %}>
                                <a href="{{ path('person_index') }}">{{ 'persons'|trans }}</a>
                            </li>

                            <li{% if app.request.attributes.get('_route') starts with 'groups' %} class="active"{% endif %}>
                                <a href="{{ path('groups_index') }}">{{ 'groups'|trans }}</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            {% endif %}

            {% block body %}{% endblock %}

            <script src="{{ asset('js/jquery.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
