{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'edit'|trans ~ ' ' ~ person.firstName ~ ' ' ~ person.lastName }}</h1>

    <div class="row">
        <div class="col-sm-6 asdas">
            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <input class="btn btn-primary pull-right" type="submit" value="{{ 'edit'|trans }}" />
            {{ form_end(edit_form) }}

            <a class="btn btn-default" href="{{ path('person_index') }}">{{ 'back_to_list'|trans }}</a>

            {{ form_start(delete_form, {'attr': {'class' : 'inline'}}) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
